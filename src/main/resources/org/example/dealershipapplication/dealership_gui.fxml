<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.dealershipapplication.DealershipController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f0f0f0;">

    <GridPane hgap="10" vgap="10">
        <!-- Add Dealer -->
        <Button text="Add Dealer" onAction="#handleAddDealer"
                GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <!-- Add Vehicle -->
        <Button text="Add Vehicle" onAction="#handleAddVehicle"
                GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Loan Vehicle -->
        <Button text="Loan Vehicle" onAction="#handleLoanVehicle"
                GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <!-- Return Vehicle -->
        <Button text="Return Vehicle" onAction="#handleReturnVehicle"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Transfer Vehicle -->
        <Button text="Transfer Vehicle" onAction="#handleTransferVehicle"
                GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <!-- Print Inventory -->
        <Button text="Print Inventory" onAction="#handlePrintInventory"
                GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Enable Receiving -->
        <Button text="Enable Receiving" onAction="#handleEnableReceiving"
                GridPane.columnIndex="0" GridPane.rowIndex="3"/>

        <!-- Disable Receiving -->
        <Button text="Disable Receiving" onAction="#handleDisableReceiving"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!-- Set Dealer Name -->
        <Button text="Set Dealer Name" onAction="#handleSetDealerName"
                GridPane.columnIndex="0" GridPane.rowIndex="4"/>

        <!-- Exit -->
        <Button text="Exit" onAction="#handleExit"
                GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
</VBox>
